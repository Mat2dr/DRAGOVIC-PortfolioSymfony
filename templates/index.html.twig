{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block body %}
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Dragovic Mathias</title>
        <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
        <link rel="stylesheet" href="main.css">
    </head>
    <header>
        <div class="menu-toggler">
            <div class="bar half start"></div>
            <div class="bar"></div>
            <div class="bar half end"></div>
        </div>
        <nav class="top-nav">
            <ul class="nav-list">
                <li>
                    <a href="index.html" class="nav-link">Home</a>
                </li>
                <li>
                    <a href="#about" class="nav-link">A propos</a>
                </li>
                <li>
                    <a href="#services" class="nav-link">Service</a>
                </li>
                <li>
                    <a href="#portfolio" class="nav-link">Portfolio</a>
                </li>
                <li>
                    <a href="#experience" class="nav-link">Experience</a>
                </li>
                <li>
                    <a href="#contact" class="nav-link">Contact</a>
                </li>
            </ul>

        </nav>
        <div class="landing-text">
            <h1>Port folio</h1>
            <h2>Mathias dragovic</h2>

            <p>BTS SIO 2020</p>

        </div>
    </header>

    <section class="portfolio" id="portfolio">
        <div class="container">
            <div class="section-heading">
                <h1>Portfolio</h1>
                <h6>Mes projets recents</h6>
            </div>


            {% for projet in projets %}
                <div class="portfolio-item">
                    <div class="portfolio-img has-margin-right" >
                        <img src="{{ vich_uploader_asset(projet, 'thumbnailFile') }}">
                    </div>

                    <div class="portfolio-description">

                        <h6> {{ projet.category }} </h6> <br>
                        <h1> {{ projet.name }} </h1> <br>
                        <h6> {{ projet.debut | date('d/m/Y') }} - {{ projet.fin | date('d/m/Y') }}</h6> <br>
                        <p> {{ projet.content }} </p> <br>
                        <p> Réalisé en stage : </p>
                        {% if projet.stage == 0 %}
                            <i class="fas fa-times-circle" style="font-size: 2.5rem;"></i>
                        {% else %}
                            <i class="fas fa-check-circle" style="font-size: 2.5rem;"></i>
                            {% endif %}
                        <br>
                        <br>
                        <br>
                        {% for tag in projet.tags %}
                        <h6>{{ tag.name }}</h6>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>


    <section class="services" id="services">
        <div class="container">
            <div class="section-heading">
                <h1>Services</h1>
                <h6>Ce que je peux faire pour vous:</h6>
            </div>
            <div class="my-skills">
                <div class="skill">
                    <div class="icon-container">
                        <i class="fas fa-layer-group"></i>
                    </div>
                    <h1>Web Design</h1>
                    <p>
                        Choix du style d'interface, des couleurs, images, emplacement des contenus...
                    </p>
                </div>
                <div class="skill">
                    <div class="icon-container">
                        <i class="fas fa-code"></i>
                    </div>
                    <h1>Developpement Web</h1>
                    <p>
                        Developpement du site web( l' interface...)
                    </p>
                </div>
                <div class="skill" >
                    <div class="icon-container">
                        <i class="fas fa-mobile-alt"></i>
                    </div>
                    <h1>Developpement d'app</h1>
                    <p>
                        Developpement d'application...
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section class="about" id="about">
        <div class="container">
            <div class="profile-img" >
                <img src="images/profile.jpg" alt="">
            </div>
            <div class="about-details">
                <div class="about-heading">
                    <h1>Mon</h1>
                    <h6>curriculum</h6>
                </div>
                <p>
                    {% for cvv in cv %}
                    {{ cvv.texte }}
                    {% endfor %}

                </p>

                <div class="social-media">
                    <ul class="nav-list">
                        <li>
                            <a href="https://www.linkedin.com/in/mathias-dragovic-954143161/" class="icon-link">
                                <i class="fab fa-linkedin"></i>
                            </a>
                        </li>
                        <li>
                            <a href="https://github.com/Mat2dr" class="icon-link">
                                <i class="fab fa-github-square"></i>
                            </a>
                        </li>
                        <li>
                            <a href="https://www.instagram.com/mat2dr/" class="icon-link">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <section class="experience" id="experience">
        <div class="container">
            <div class="section-heading">
                <h1>Mon experience</h1>
                <h6>Passé et actuel</h6>
            </div>
            <div class="timeline" >
                <ul>
                    {% for situation in situations %}
                        <li class="date" data-date="{{ situation.debut  | date('d/m/Y')}}  - {{ situation.fin | date('d/m/Y')}} ">
                            <h1>{{ situation.nom }}</h1>
                            <p>
                                {{ situation.texte }}
                            </p>
                        </li>
                    {% endfor %}

                </ul>
            </div>
        </div>
    </section>

    <section class="contact" id="contact">
        <div class="container">
            <div class="section-heading">
                <h1>Contact</h1>
                <h6>Travaillons ensemble</h6>
            </div>
            <form action="" >
                <label for="name">Nom:</label>
                <input type="text" id="name" name="name" placeholder="Entre ton nom..." required>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" placeholder="Entre ton email..." required>
                <label for="service">Services:</label>
                <select name="services" id="service">
                    <option value="">Web Design</option>
                    <option value="">Web Development</option>
                    <option value="">Web Design/Development</option>
                </select>
                <label for="subject">Sujet:</label>
                <textarea name="subject" id="subject" cols="10" rows="10"></textarea>
                <input type="submit" value="Envoyer">
            </form>
        </div>
    </section>

    <footer class="copyright">
        <div class="up" id="up">
            <i class="fas fa-chevron-up"></i>
        </div>
        <p>&copy; 2019 Dragovic Mathias</p>

    </footer>

{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/main.js') }}"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://unpkg.com/aos@next/dist/aos.js"></script>
{% endblock %}